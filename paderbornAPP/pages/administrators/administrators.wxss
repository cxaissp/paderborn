@import "weui.wxss";

.box1 {
  display: flex;
  justify-content: space-evenly;
  box-sizing: border-box;
}

.title {
  width: 50%;
  height: 40px;
  line-height: 40px;
  font-size: 20px;
  font-weight: bold;
  text-indent: 1em;
  text-align: center;
  transform: translateX(-15%);
}

.circleContainer {
  width: 100%;
  display: flex;
  justify-content: space-around;
  align-items: center;
  height: 120px;
  box-sizing: border-box;
  padding: 10px;
}

.square {
  height: 105px;
  width: 105px;
  border-radius: 60%;
  background: #237ab7;
  display: flex;
  justify-content: center;
  align-items: center;
}

.innerCircle {
  height: 80px;
  width: 80px;
  border-radius: 50%;
  background: #f3eef3;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 20px;
}

.box {
  height: 120px;
  width: 120px;
  text-align: center;
  box-sizing: border-box;
}

.boxRow {
  display: flex;
  justify-content: space-evenly;
  height: 60px;
  line-height: 60px;
  align-items: center;
}

.dot {
  height: 20px;
  width: 20px;
  border-radius: 50%;
  background: green;
}

ec-canvas {
  width: 100%;
  height: 100%;
}

